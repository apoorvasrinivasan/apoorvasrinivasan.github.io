$yellow=#d2a435;
$blue=#246989;
$cardWidth= 800px
body
  font:14px/1.1  helvetica, Arial, sans-serif
  background-color: black
  @media screen and (max-width: $cardWidth)
    font:12px/1.3  helvetica, Arial, sans-serif
a
 text-decoration: none
 color: inherit


#card
  width: $cardWidth
  position: absolute
  height:h= (@width / 1.586)
  overflow:hidden
  top:calc(50% - 300px)
  left:calc(50% - 400px)
  background-color:white
  display: flex
  @media screen and (max-width: $cardWidth)
    flex-direction: column
    margin: 2em auto
    position static
    width: 90%;
  > .lhs
    flex: lflex = .7
    background-color: $blue
    .content
      position: absolute
      top: 15%
      width: 200px
      left: ((lflex * $cardWidth) /2) -  (@width /2)
      @media screen and (max-width: $cardWidth)
        position static
        margin 30px auto 0
      .image
        border-radius: 50%
        overflow: hidden
        height: 200px
        box-shadow: 0 0 4px -2px #000

  > .rhs
    flex: rflex =  .3
    position:relative
    radd = .2
    &:before
      display: block
      background-color:white
      transform:skew(-(radd)rad)
      height:100%
      position: absolute
      left: -(radd * (h/2)) - 10
      width: -@left * 2
      content:""
      @media screen and (max-width: $cardWidth)
        display:none
    .content
      @media screen and (min-width: $cardWidth)
        position: absolute
        padding-top:50%
        width:(rflex * $cardWidth);
        height:100%;
        top:0
        right:0
      .name 
        padding: 0.5em 13px;
        margin-top: 0;
        font-size: 1.3em
        background: $yellow

        @media screen and (min-width: $cardWidth)
          position: absolute
          padding: .5em
          width: 100%
          right:0
          padding-left: 3em
          box-shadow: 0px 2px 1px #8c7236;
          top: 3em
        
          &:before
            content: "";
            display: inline-block
            position: absolute
            height: 5px;
            background: $yellow
            width: 37px
            left: 0px
            bottom: -4px
            transform: rotate(.20rad)
            box-shadow: 0px 3px 0px #8c7236;
.bio
  font: 1.1em
  margin-top: 1em
  padding: 0
  text-align: center
  a
    color: $blue
    font-size: .9em
ul.bio
  text-align: left
  margin-top: 5em
  list-style: none
  @media screen and (max-width: $cardWidth)
    margin: 0
    padding 0 13px

.footer
    position: absolute
    display: flex
    bottom: 5%
    height: 7em
    width: 73%
    left: 5%
    flex-direction: column
    flex-wrap: wrap
    align-content: space-around
    @media screen and (max-width: $cardWidth)
      width 90%
      position static
      margin 0 auto 10px
  a
    transition: 0.2s all;
    &:hover
      transform scale(1.2)
      opacity 1

